									</option>
									<option value="d6"> D6
									</option>
									<option value="d8"> D8
									</option>
									<option value="d10"> D10
									</option>
									<option value="d12"> D12
									</option>
									<option value="d20"> D20
									</option>
									<option value="d0"> None
									</option>
								</select>
							</label>
