{# Maybe port these out at some point? #}

{% macro abilityTemplate(abbreviation, name) %}
    
<a href="https://www.google.com" class="rollButton ability1st">

</a>
<div class="abilityTitlecard ability2nd">
    <div class="abilityName">
      {{ name }}
    </div>
    
    <div class="abilityAbbrev">
      {{ abbreviation }}
    </div>
</div>

<input class="totAbilityScore ability3rd" type="text" name="attr_totAbilityScore{{ name }}" value="10">
<input class="abilityMod ability4th" type="text" name="attr_abilityMod{{ name }}" value="(@\{ {{ name }} \}-10)/2">
<input class="abilityBase ability5th" type="text" name="attr_abilityBase{{ name }}">
<input class="tempAbilityScore ability6th" type="text" name="attr_tempAbilityScore{{ name }}">    
{% endmacro %}



{# End macro section #}

<div id="full-sheet">
	<div id="header-fields">
		<label class="charName">Character Name<input type="text" name="attr_char_name" /></label>
		<label class="charName">Class and Level<input type="text" name="attr_class_lvl" /></label>
		<label class="charName">Race<input type="text" name="attr_race" /></label>
		<label class="charName">Movement<input type="text" name="attr_movement" /></label>
		<label class="charName">Age<input type="text" name="attr_age"></label>
		<label class="charName">Gender<input type="text" name="attr_gender" /></label>
		<label class="charName">Height<input type="text" name="attr_height" /></label>
		<label class="charName">Weight<input type="text" name="attr_weight" /></label>
		<label class="charName">Eyes<input type="text" name="attr_eyes" /></label>
		<label class="charName">Hair<input type="text" name="attr_hair" /></label>
		<label class="charName">Skin<input type="text" name="attr_skin" /></label>
	</div>

	<div id="portrait">
		Portrait goes here
	</div>

	<div id="abilities" class="header-table">

		<div class="sectionHeader"> ABILITIES </div></br>

		<div id="abilityTitleName ability2nd">
			AbilityName
		</div>
		<div id="abilityTitleTotal ability3rd">
			Total Score
		</div>
		<div id="abilityTitleMod ability4th">
			Mod.
		</div>
		<div id="abilityTitleBase ability5th">
			Base Score
		</div>
		<div id="abilityTitleTemp ability6th">
			Temp Mod.
		</div>

		{% set abilities = [["STR","Strength"],["DEX","Dexterity"],["CON","Constitution"],["INT","Intelligence"],["WIS","Wisdom"],["CHA","Charisma"]] %}

		{% for ability in abilities %}
		{{ abilityTemplate(ability[0], ability[1])}}
		{% endfor %}
	</div>

	<div id="conditions">

		<div class="sectionHeader">CONDITIONS</div></br>

		{# All checkboxes are the same class. Pick left or right side for all boxes #}
		<input type="checkbox" name="attr_fatiguedCondition" value='0'>
			Fatigued
			{# Again, some way of adding description/header. Or just a <div class="sectionHeader"> etc tag? #}

		<input type="checkbox" name="attr_exhaustedCondition" value='0'>
			Exhausted

		<input type="checkbox" name="attr_bloodiedCondition" value='0'>
			Bloodied
		
		<input type="checkbox" name="attr_woundedCondition" value='0'>
			Wounded

		Encumbrance:<input type="text" name="attr_encumbranceCondition">

	</div>

	<div id="skills" class="header-table">

		<div class="sectionHeader">SKILLS</div></br>

		{% set skills = ["Acrobatics","Appraise","Bluff","Climb","Concentration","Decipher Script","Diplomacy","Disguise","Escape Artist","Fly","Forgery","Gather Information","Handle Animal","Heal","Intimidate","Perception","Ride","Search","Sense Motive","Sleight of Hand","Spellcraft","Stealth","Survival","Swim","Tamper"] %}

		{% for skill in skills %}
		<a href="https://www.google.com" class="rollButton"></a>
		<div class="skill">
			{{skill}}
		</div>
		<input type="text" name="attr_skill_{{skill}}">
		{% endfor %}
	</div>

	<div id="languages" class="header-table">
		<div class="sectionHeader">LANGUAGES</div></br>
		<input type="text" name="attr_languages">
	</div>

	<div id="hit-points">
		<div class="sectionHeader">HIT POINTS</div></br>
		<div class="top-box" id="totalhp">
			Hit Points
		</div>

		<div class="top-box" id="damage">
			DMG Taken
		</div>

		<div class="top-box" id="wounds-scars">
			Wounds and Scars
		</div>

		<div class="side-box" id="bloodied-at">
			Bloodied at:
			{# Should have something for below-box too... #}
		</div>

		<div class="side-box" id="wounded-at">
			Wounded at:
			{# Should have something for below-box too... #}
		</div>

		<div id="death-saves">
			XXXX
			XXX
		</div>

		<div class="side-box" id="recovery-dice">
			Recovery Dice:			
		</div>

		<div class="side-box" id="recovery-dice-used">
			Used:
		</div>

	</div>

	<div id="armor">

		<div class="sectionHeader">ARMOR CLASS</div></br>

		<div id="armor-header">
			{# Maybe I need a better way of doing these plus-box-type-things #}
		</div>

		<div id="armor-box" class="armor-box topbar-table">
			Armor
		</div>

		<div id="shield-box" class="armor-box topbar-table">
			Shield
		</div>


	</div>

	<div id="saving-throws">

		<div class="sectionHeader">SAVING THROWS</div></br>

		<div id="saves-header">

		</div>

		{% set saves = ["Charm","Reflex","Death","Fear","Spell"] %}

		{% for save in saves %}
		<div class="save">
			{{save}}
		</div>
		{% endfor %}

		<div id="conditional-mods">

		</div>

	</div>

	<div id="special-abilities">

		<div class="sectionHeader">SPECIAL ABILITIES</div></br>

		{# Do something cool here. Like feats. But what? #}

	</div>

	<div id="attacks">

		<div class="sectionHeader"> ATTACKS </div></br>

		<div id="attacks-header">
			<div id="bcb" class="side-box">
				BCB
			</div>

			<div id="grapple">
				<div class="side-box">
				Grapple Modifier
				</div>

				= 

				<div class="square-box">
				</div>
				+
				<div class="square-box">
				</div>
				+
				<div class="square-box">
				</div>
			</div>

			<div class="side-box">
				Melee Attack
			</div>

			<div class="side-box">
				Ranged Attack
			</div>
		</div>

		{% for i in range(1,3) %}

		<div id="attacks-{{i}}" class="attack-box topbar-table">
			{# TODO #}
		</div>

		{% endfor %}
	</div>

	<div id="feats">
		<div class="sectionHeader">FEATS</div></br>
		{# Do something nice here. But may have to be just a js thing? #}
	</div>


</div>
